#include <iostream>
#include <cstring>

using namespace std;

void check_polindrom(string word)
{
	bool t = true;
	int len = word.length();
	for (int i = 0; i < len / 2; ++i)
	{
		if (word[i] != word[len - i - 1])
		{
			t = false;
		}
	}
	if (t)
	{
		cout << "Word is polindrom.";
	}
	else
	{
		cout << "Word is not polindrom";
	}
}

int main()
{
	string str;
	cout << "Enter the word: ";
	cin >> str;
		check_polindrom(str);
	;
	return 0;
}
